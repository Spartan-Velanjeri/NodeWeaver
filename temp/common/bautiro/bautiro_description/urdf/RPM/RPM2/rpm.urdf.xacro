<?xml version="1.0"?>
<robot name="rpm" xmlns:xacro="http://ros.org/wiki/xacro">
  
  <!-- Include the common RPM snippets-->
  <xacro:include filename="$(cwd)/urdf/RPM/rpm.urdf.xacro"/>

  <!-- working space center point -->
  <link name="rpm_working_space_center_point">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>    
  </link>
  
  <joint name="baselink2workingspace" type="fixed">
    <origin xyz="1.192 0.041 -0.128" rpy="0.0 0.0 0.0"/>
    <parent link="rpm_base_link"/>
    <child link="rpm_working_space_center_point"/>
  </joint>
 
